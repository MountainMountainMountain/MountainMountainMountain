<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 네임스페이스에 DAO 풀패키지명을 작성 -->
<mapper namespace="com.mountain.model.dao.ChatUserManagerDao">

	<select id="getParticipantCount" parameterType="int">
		SELECT COUNT(*)
		FROM ChatUserManager
		WHERE chatInfo_serial = #{chatInfoSerial}
	</select>
	
	<insert id="joinChat" parameterType="int">
		INSERT INTO ChatUserManager (chatInfo_serial, user_serial)
		VALUE (chatInfoSerial, userSerial)
	</insert>
	
	<select id="selectOneByChatUserManagerSerial" parameterType="int" resultType="ChatUserManager">
		SELECT *
		FROM ChatUserManager
		WHERE serial = #{ChatUserManagerSerial}
	</select>
	
	<select id="selectOneByChatInfoSerial" parameterType="int" resultType="ChatUserManager">
		SELECT *
		FROM ChatUserManager
		WHERE chatInfo_serial = #{ChatInfoSerial}
	</select>

	<update id="updateChatUserManager" parameterType="ChatUserManager">
		UPDATE ChatUserManager
		SET chatInfo_serial = #{chatInfoSerial}, user_serial = #{userSerial}
	</update>
	
	<delete id="leaveChat">
		DELETE FROM ChatUserManager
		WHERE chatInfo_serial = #{chatInfoSerial} AND user_serial = #{userSerial}
	</delete>
		
</mapper>